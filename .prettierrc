{
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 120,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.html", "*.hbs"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
