<div class="input{{#if search}} has_search{{/if}}{{#if top_search}} top_search{{/if}}{{#if search_ty2}} search_ty2{{/if}}{{#if class}} {{class}}{{/if}}{{#if no_del}} no_del{{/if}}">
  {{#if top_search}}<button class="search">검색</button>{{/if}}
  <input {{#if type}}type="{{type}}"{{else}}type="text"{{/if}}
  {{#if maxlength}} maxlength="{{maxlength}}"{{/if}} 
  {{#if id}}id="{{id}}"{{/if}} 
  {{#if name}}name="{{name}}"{{/if}} 
  {{#if value}}value="{{value}}"{{/if}} 
  {{#if disabled}}disabled{{/if}}
  {{#if readonly}}readonly{{/if}}
  {{#if placeholder}}placeholder="{{placeholder}}"{{/if}}>
  {{#if search}}<button class="search">검색</button>{{/if}}
  {{#if search_ty2}}<button class="search">검색</button>{{/if}}
  {{#unless no_del}}<span class="del">텍스트삭제</span>{{/unless}}
  {{#if error_text}}<div class="error_text">{{error_text}}</div>{{/if}}
  {{#if success_text}}<div class="success_text">{{success_text}}</div>{{/if}}
  {{#if btn_filter}}<button class="filter">필터</button>{{/if}}
  {{#if placeholder_text}}<div class="placeholder_text">{{placeholder_text}}</div>{{/if}}
</div>